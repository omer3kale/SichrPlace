# =================================================================
# SichrPlace Environment Variables Template
# =================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# -----------------------------
# Admin & Test Credentials
# -----------------------------
# These are used for test environments only
# In production, use database-stored bcrypt hashes
ADMIN_PASSWORD=your_secure_admin_password_here
TEST_USER_PASSWORD=your_secure_test_password_here

# -----------------------------
# JWT Configuration
# -----------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=generate_with_crypto_randomBytes_64

# -----------------------------
# Master Encryption Key (Optional)
# -----------------------------
# Used for encrypting sensitive API keys
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
MASTER_KEY=generate_with_crypto_randomBytes_32

# -----------------------------
# Supabase Configuration
# -----------------------------
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# -----------------------------
# Google Maps API
# -----------------------------
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# -----------------------------
# Email Configuration
# -----------------------------
# Use Gmail App Password (not your regular password)
# See: https://support.google.com/accounts/answer/185833
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# -----------------------------
# PayPal Configuration
# -----------------------------
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# -----------------------------
# Application Settings
# -----------------------------
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# -----------------------------
# Database Settings
# -----------------------------
DATABASE_URL=your_database_url

# -----------------------------
# Redis Configuration (Optional)
# -----------------------------
REDIS_URL=your_redis_url

# =================================================================
# SECURITY BEST PRACTICES:
# 
# 1. Never commit .env files to version control
# 2. Use different secrets for development and production
# 3. Rotate secrets regularly (every 90 days recommended)
# 4. Use strong, unique passwords for each environment
# 5. Keep backup of production secrets in secure vault
# 6. Use environment-specific .env files (.env.production, .env.staging)
# 
# =================================================================
